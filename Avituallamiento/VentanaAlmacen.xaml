<Window x:Class="AplicacionAvituallamiento.VentanaAlmacen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="324" Width="468">
    <Grid>
        <Label x:Name="LabelAlmacen" Content="PRODUCTOS ALMACENADOS" HorizontalAlignment="Center" Margin="69,10,0,0" VerticalAlignment="Top" Width="318" FontSize="16"/>
        
        <Button x:Name="BtnCerrar" Content="Cerrar" HorizontalAlignment="Left" Margin="376,263,0,0" VerticalAlignment="Top" Width="75" Click="BtnCerrar_Click"/>
        <Button x:Name="BtnBorrarProducto" Content="Borrar" HorizontalAlignment="Left" Margin="216,263,0,0" VerticalAlignment="Top" Width="75" Click="BtnBorrarProducto_Click"/>
        <Button x:Name="BtnEditarProducto" Content="Editar" HorizontalAlignment="Left" Margin="296,263,0,0" VerticalAlignment="Top" Width="75" Click="BtnEditarProducto_Click"/>
        <DataGrid x:Name="DataGridAlmacen" ItemsSource="{Binding Path=listaProductos}" HorizontalAlignment="Left" Margin="22,54,0,0" VerticalAlignment="Top" Height="193" Width="428"/>

    </Grid>
</Window>
